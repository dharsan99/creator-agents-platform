# Database
DATABASE_URL=postgresql://user:password@localhost:5432/creator_agents

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI (for LLM agents)
OPENAI_API_KEY=sk-your-key-here

# SuprSend (Email/WhatsApp/SMS) - Primary notification provider
SUPRSEND_WORKSPACE_KEY=your-suprsend-workspace-key
SUPRSEND_WORKSPACE_SECRET=your-suprsend-workspace-secret
IS_STAGING_ENV=false  # Set to true for staging environment

# AWS SES (Email) - Fallback email provider
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
SES_SENDER_EMAIL=noreply@yourdomain.com

# Twilio (WhatsApp/SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Application
ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================================================
# Pydantic Integration (Phase 0)
# ========================================================================

# Feature Flags - Enable features gradually
ENABLE_LOGFIRE=false
ENABLE_PYDANTIC_AI=false
ENABLE_COMPUTED_FIELDS=false
ENABLE_STREAMING_VALIDATION=false
ENABLE_CONTEXT_AWARE_VALIDATION=false

# Logfire Configuration - Get token from https://logfire.pydantic.dev
LOGFIRE_TOKEN=your-logfire-token-here
LOGFIRE_SERVICE_NAME=creator-agents-platform
LOGFIRE_ENVIRONMENT=development

# Pydantic AI Configuration
PYDANTIC_AI_MODEL=openai:gpt-4-turbo-preview
PYDANTIC_AI_TEMPERATURE=0.7
PYDANTIC_AI_MAX_RETRIES=3
